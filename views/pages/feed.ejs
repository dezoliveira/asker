<%- include ("../partials/header") %>
<body>
  <%- include ("../partials/navbar.ejs") %>
  <div class="container col-lg-6 col-md-6 col-sm-12 p-4 d-flex flex-column justify-content-center gap-4" style="height: 100%;">
    <div class="container card col-lg-12 col-md-12 col-sm-12 d-flex flex-row align-items-center justify-content-center gap-2 p-4">
      <h3>Ask a new question</h3>
      <a href="/ask" class="btn btn-primary">Ask</a>
    </div>
    <% questions.forEach(question => { %>
      <div class="card">
        <div class="card-header">
          <h3><%= question.title %></h3>
        </div>
        <div class="card-body">
          <p class=""><%= question.description%></p>
        </div>
        <div class="card-footer d-flex align-items-center justify-content-between">
          <button class="btn btn-primary">Answer</button>
          <small>
            <p></p><strong>Criado em: </strong><%= question.createdAt%></small>
        </div>
      </div>
    <% }) %>
  </div>
</body>
<%- include ("../partials/footer") %>