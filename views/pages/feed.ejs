<%- include ("../partials/header") %>
<body>
  <%- include ("../partials/navbar.ejs") %>
  <div class="container col-lg-6 col-md-6 col-sm-12 p-4 d-flex flex-column justify-content-center gap-4" style="height: 100%;">
    <div class="container card col-lg-12 col-md-12 col-sm-12 d-flex flex-column align-items-center justify-content-center gap-2 p-4">
      <div class="row">
        <h3>Here you can ask a new question</h3>
        <p>Please follow the rules:</p>
        <small>1 - Do not insult another users.</small>
        <small>2 - Be kind with strangers.</small>
        <small>3 - Wash your teeths and eat vegetables.</small>
      </div>
      <div class="row d-flex justify-content-between align-items-center">
        <a href="/ask" class="btn btn-success">+ New Question</a>
      </div>
    </div>
    <% if (questions.length) { %>
      <% questions.forEach(question => { %>
        <div class="card">
          <div class="card-header">
            <h3><%= question.title %></h3>
          </div>
          <!-- <div class="card-body">
            <p class=""><%= question.description%></p>
          </div> -->
          <div class="card-footer d-flex align-items-center justify-content-between">
            <a href="/question/<%= question.id %>">
              <button class="btn btn-primary">Answer</button>
            </a>
            <small>
							<p class="m-0">
								<strong>Criado em: </strong>
								<%= question.createdAt.toLocaleDateString() + " - " + question.createdAt.toLocaleTimeString()%>
							</p>
						</small>
          </div>
        </div>
      <% }) %>
    <% } else { %>
				<div class="card">
					<div class="card-body">
						<p>Sorry, no questions for now</p>
					</div>
				</div>
		<% } %>
  </div>
</body>
<%- include ("../partials/footer") %>