  <div class="container col-lg-4 col-md-4 col-sm-12 p-4">
    <div class="card">
      <div class="card-header">
        <h3>Ask a question</h3>
      </div>
      <div class="card-body">
        <form class="d-flex flex-column gap-4">
          <!-- Title -->
          <div>
            <label>Title</label>
            <input type="text" placeholder="Type a title" class="form-control" />
          </div>
          <!-- Description -->
          <div>
            <label>Description</label>
            <textarea placeholder="Where is foo ?" class="form-control"></textarea>
          </div>
          <div class="btn-group d-flex align-center justify-center  col-lg-2 col-md-2 col-sm-12">
            <button class="btn btn-primary">Ask</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
