<%- include ("../partials/header") %>
<body>
  <%- include ("../partials/navbar.ejs") %>
  <div class="container col-lg-8 col-md-8 col-sm-12 p-4 d-flex flex-column justify-content-center gap-4" style="height: 92vh;">
    <div class="card">
      <div class="card-header">
        <h1><%= question.title %></h1>
        <!-- <p><%= question.description %></p> -->
      </div>
      <div class="card-body">
        <form method="POST" action="/answer" class="d-flex flex-column gap-2">
          <h3>Answer</h3>
          <label>Anwser the question: <strong><%= question.title %></strong></label>
          <textarea placeholder="Type your answer" class="form-control" placeholder="Where is foo ?" rows="12" name="body"></textarea>
          <input type="text" name="question" value="<%= question.id %>" hidden />
          <div class="form-buton">
            <button class="btn btn-success">Submit</button>
            <a href="/">
              <button class="btn btn-danger">Cancel</button>
            </a>
          </div>
        </form>
      </div>
    </div>
    <div>
      <div class="card">
        <div class="card-header">
          <h3>Answers</h3>
        </div>
        <div class="card-body">
          <% answer.forEach(answer => { %>
            <%= answer.body %>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</body>
<% include ("../partials/footer.ejs") %>